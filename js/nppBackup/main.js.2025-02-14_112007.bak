// 기존 loadImage 함수 (변경 없음)
function loadImage(basePath, baseName, extensions, elementSelector, setSrcCallback) {
  let idx = 0;
  
  function tryNext() {
    if (idx >= extensions.length) {
      console.error("No valid image found for " + baseName);
      return;
    }
    
    const ext = extensions[idx++];
    const testImg = new Image();
    
    testImg.onload = function() {
      // 이미지 로드 성공 시, 콜백을 통해 요소에 이미지를 설정합니다.
      const url = basePath + baseName + "." + ext;
      setSrcCallback(url);
      console.log("Image loaded successfully: " + url);
    };
    
    testImg.onerror = function() {
      console.log("Failed to load: " + basePath + baseName + "." + ext);
      tryNext();
    };
    
    testImg.src = basePath + baseName + "." + ext;
  }
  
  tryNext();
}

// DOMContentLoaded 이벤트 핸들러: 두 종류의 요소 처리
document.addEventListener("DOMContentLoaded", function() {
  const extensions = ["png", "jpg", "jpeg", "gif"];

  // 1. <img> 태그에 적용 (예: 저널 페이지)
  const imgElements = document.querySelectorAll("img[data-base-name]");
  imgElements.forEach(function(img) {
    const src = img.getAttribute("src");
    const lastSlashIndex = src.lastIndexOf("/");
    const basePath = src.substring(0, lastSlashIndex + 1);
    const baseName = img.getAttribute("data-base-name");
    const elementSelector = "#" + img.id;  // 각 이미지는 고유 id가 있어야 합니다.
    
    // 콜백: <img> 태그의 src를 변경
    loadImage(basePath, baseName, extensions, elementSelector, function(url) {
      document.querySelector(elementSelector).src = url;
    });
  });
  
  // 2. background-image로 설정된 요소에 적용 (예: members 페이지의 .member-img)
  const bgElements = document.querySelectorAll(".member-img[data-base-name]:not(img)");
  bgElements.forEach(function(el) {
    // background-image는 보통 style 속성에 지정되어 있습니다.
    let bg = window.getComputedStyle(el).backgroundImage;
    // 예: bg가 'url("images/members/Lee_Jihyeon.png")'
    // 정규식으로 URL 부분만 추출
    bg = bg.replace(/^url\(["']?/, "").replace(/["']?\)$/, "");
    const lastSlashIndex = bg.lastIndexOf("/");
    const basePath = bg.substring(0, lastSlashIndex + 1);
    const baseName = el.getAttribute("data-base-name");
    
    // 고유 id가 없다면 부여 (members 페이지의 경우 id가 있을 수도 있지만 없는 경우도 대비)
    if (!el.id) {
      el.id = "member_" + baseName;
    }
    const elementSelector = "#" + el.id;
    
    // 콜백: background-image 스타일을 변경
    loadImage(basePath, baseName, extensions, elementSelector, function(url) {
      document.querySelector(elementSelector).style.backgroundImage = "url(" + url + ")";
    });
  });
});

document.addEventListener("DOMContentLoaded", function() {
  // 이미지 파일들이 들어있는 폴더 URL (디렉토리 인덱스가 활성화되어 있어야 함)
  const folderUrl = "images/members/";
  const container = document.getElementById("gallery-container");
  const allowedExts = [".png", ".jpg", ".jpeg", ".gif"];
  // 파일명 패턴: 두 자리 연도, 언더스코어, 숫자, 확장자 (예: 25_68.png)
  const pattern = /^(\d{2})_(\d+)(\.(png|jpg|jpeg|gif))$/i;
  
  // 디렉토리 인덱스 가져오기: 서버에서 디렉토리 목록이 HTML 형태로 제공될 때
  fetch(folderUrl)
    .then(response => response.text())
    .then(htmlText => {
      const parser = new DOMParser();
      const doc = parser.parseFromString(htmlText, "text/html");
      // 디렉토리 인덱스 페이지는 보통 <a> 태그로 파일 목록을 보여줍니다.
      const links = Array.from(doc.querySelectorAll("a"))
                        .map(a => a.getAttribute("href"))
                        .filter(href => href && pattern.test(href));

      // 그룹화: 각 파일을 파싱하여 연도와 번호를 추출
      const groups = {};
      links.forEach(file => {
        const match = file.match(pattern);
        if (match) {
          const yearPrefix = match[1];   // 예: "25"
          const numPart = parseInt(match[2]); // 예: 68
          // 연도: 두 자리 연도에 "20" 접두어를 붙여서 생성 (예: "25" -> "2025")
          const fullYear = "20" + yearPrefix;
          if (!groups[fullYear]) groups[fullYear] = [];
          groups[fullYear].push({ number: numPart, filename: file });
        }
      });
      
      // 각 그룹 내에서 번호 내림차순 정렬
      Object.keys(groups).forEach(year => {
        groups[year].sort((a, b) => b.number - a.number);
      });
      
      // 연도 그룹 전체를 내림차순(최신 연도 우선)으로 정렬
      const sortedYears = Object.keys(groups).sort((a, b) => b - a);
      
      // HTML 동적 생성
      sortedYears.forEach(year => {
        // 그룹 컨테이너
        const groupDiv = document.createElement("div");
        groupDiv.className = "journal-item";
        groupDiv.setAttribute("data-year", year);
        
        // 그룹 헤더 (연도)
        const header = document.createElement("h2");
        header.className = "fh5co-heading animate-box";
        header.setAttribute("data-animate-effect", "fadeInLeft");
        header.textContent = year;
        groupDiv.appendChild(header);
        
        // row 컨테이너
        const rowDiv = document.createElement("div");
        rowDiv.className = "row row-bottom-padded-md";
        
        groups[year].forEach(item => {
          const colDiv = document.createElement("div");
          colDiv.className = "col-md-custom col-sm-6 col-padding text-center animate-box";
          
          // <a> 태그 (라이트박스용)
          const a = document.createElement("a");
          a.href = folderUrl + item.filename;
          a.setAttribute("data-toggle", "lightbox");
          a.setAttribute("data-gallery", "gallery");
          
          // work 영역: 배경 이미지로 설정
          const workDiv = document.createElement("div");
          workDiv.className = "work g1";
          workDiv.style.backgroundImage = `url(${folderUrl}${item.filename})`;
          a.appendChild(workDiv);
          colDiv.appendChild(a);
          
          // 캡션: 번호 상자와 이미지 이름 (예: "25_68")
          const captionDiv = document.createElement("div");
          captionDiv.className = "caption";
          
          // 번호 상자 (파일명에서 추출한 번호)
          const numberBox = document.createElement("div");
          numberBox.className = "number-box";
          numberBox.textContent = item.number; // 정수형 번호만 표시
          captionDiv.appendChild(numberBox);
          
          // 캡션 텍스트 (여기서는 파일명(YY_XX)을 사용)
          const span = document.createElement("span");
          span.className = "p8";
          span.innerHTML = `${year.slice(-2)}_${item.number}<br>`;
          captionDiv.appendChild(span);
          
          colDiv.appendChild(captionDiv);
          rowDiv.appendChild(colDiv);
        });
        
        groupDiv.appendChild(rowDiv);
        container.appendChild(groupDiv);
      });
      
    })
    .catch(error => console.error("Error fetching directory listing:", error));
});





